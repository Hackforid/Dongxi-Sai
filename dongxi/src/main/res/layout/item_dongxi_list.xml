<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_card"
        android:padding="1dp"
        >

        <ImageView
            android:id="@+id/iv_dongxi"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_dongxi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_dongxi"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="10dp"
            android:background="@color/dongxi_price_bg"
            />

        <TextView
            android:id="@+id/tv_dongxi_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_dongxi"
            android:layout_margin="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/dongxi_title_brown"
            />

    </RelativeLayout>


</LinearLayout>