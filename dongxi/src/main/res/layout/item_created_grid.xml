<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/v_card"
              android:orientation="vertical"
              android:background="@drawable/btn_bg_card"
              android:padding="1dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.smilehacker.dongxi.view.DynamicHeightImageView
        android:id="@+id/iv_dongxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_dongxi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/dongxi_title_brown"
        android:textSize="12sp"
        />

</LinearLayout>
