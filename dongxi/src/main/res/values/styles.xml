<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/DongxiActionBar</item>
        <item name="android:windowAnimationStyle">@style/sliding_animation</item>
    </style>

    <style name="AppTheme.Overlay">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="DongxiActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/dongxi_red</item>
        <item name="android:titleTextStyle">@style/DongxiTitleTextStyle</item>
    </style>


    <style name="DongxiTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>












    <style name="Button.Default" parent="android:Widget.Button">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">44dip</item>
        <item name="android:minWidth">56dip</item>
    </style>


    <style name="Button.Holo.Green" parent="Button.Default">
        <item name="android:background">@drawable/btn_bg_holo_green</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
