<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smilehacker.dongxi"
    android:versionCode="1"
    android:versionName="0.1.0-alpha" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:name="com.smilehacker.dongxi.app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smilehacker.dongxi.activity.HomeActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.Overlay"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smilehacker.dongxi.activity.DetailActivity"
            android:hardwareAccelerated="true"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.smilehacker.dongxi.activity.PhotoActivity"
            android:label="@string/title_activity_photo"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.smilehacker.dongxi.activity.MerchantActivity"
            android:label="@string/title_activity_merchant" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
